{
  "name": "cordova-windows",
  "version": "6.1.0-dev",
  "description": "cordova-windows release",
  "bin": "bin/create",
  "main": "template/cordova/Api.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/apache/cordova-windows"
  },
  "bugs": {
    "url": "https://github.com/apache/cordova-windows/issues"
  },
  "keywords": [
    "windows",
    "cordova",
    "apache"
  ],
  "scripts": {
    "eslint": "eslint bin template spec",
    "test": "npm run eslint && npm run test:unit && npm run test:e2e",
    "test:coverage": "nyc jasmine --config=spec/unit.json",
    "test:coverage:win": "nyc jasmine --config=spec/coverage.json",
    "test:e2e": "jasmine  --config=spec/e2e.json",
    "test:unit": "jasmine --config=spec/unit.json"
  },
  "dependencies": {
    "cordova-common": "^3.1.0",
    "elementtree": "^0.1.7",
    "node-uuid": "^1.4.8",
    "nopt": "^4.0.1",
    "q": "^1.5.1",
    "semver": "^5.5.0",
    "shelljs": "^0.5.3",
    "winjs": "^4.4.3"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jasmine": "3.1.0",
    "nyc": "^13.1.0",
    "rewire": "^4.0.1"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true,
  "author": "Apache Software Foundation",
  "license": "Apache-2.0",
  "nyc": {
    "include": [
      "bin/**",
      "template/cordova/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
